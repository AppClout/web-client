<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqFancyTransitions.1.8.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div class="header-img" id="slideshow">
            <img alt="" src="@Url.Content("~/Content/images/front2.jpg")" />
            <img alt="" src="@Url.Content("~/Content/images/front5.jpg")" />
        </div>
        <div class="contacts" >@Html.Partial("_Contacts")</div>
        <script>
            $('#slideshow').jqFancyTransitions(
     { effect: 'wave',
         width: 754,
         height: 350,
         delay: 3500
     });
        </script>
        <div id="header">
            <div id="title">
                <h1>
                    Мое приложение MVC</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                    <li>@Html.ActionLink("О программе", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
